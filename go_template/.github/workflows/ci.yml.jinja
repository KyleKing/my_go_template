name: CI

on:
  workflow_dispatch:
  pull_request:
  push:
    tags: ["*"]
    branches: ["{{ development_branch }}"]
{% raw %}
concurrency:
  group: ${{ github.workflow }}-${{ github.ref }}
  cancel-in-progress: true

jobs:
  ci:
    runs-on: ubuntu-latest
    timeout-minutes: 10
    steps:
      - uses: actions/checkout@v6

      - uses: jdx/mise-action@v2
        with:
          mise_toml: |
            [env]
            MISE_ENV = "ci"

      - uses: actions/setup-go@v6
        with:
{% endraw -%}
{%- if project_type == 'workspace' %}
          go-version-file: 'go.work'
          cache-dependency-path: 'go.work.sum'
{%- else %}
          go-version-file: 'go.mod'
{%- endif %}

      - run: mise run ci
{% raw %}
      - uses: actions/upload-artifact@v4
        if: always()
        with:
          name: coverage
          path: coverage.out
          if-no-files-found: ignore

  lint:
    runs-on: ubuntu-latest
    timeout-minutes: 10
    steps:
      - uses: actions/checkout@v6

      - uses: actions/setup-go@v6
        with:
{% endraw -%}
{%- if project_type == 'workspace' %}
          go-version-file: 'go.work'
{%- else %}
          go-version-file: 'go.mod'
{%- endif %}
{% raw %}
      - uses: golangci/golangci-lint-action@v7
        with:
          version: latest

  benchmark:
    runs-on: ubuntu-latest
    timeout-minutes: 15
    steps:
      - uses: actions/checkout@v6

      - uses: actions/setup-go@v6
        with:
{% endraw -%}
{%- if project_type == 'workspace' %}
          go-version-file: 'go.work'
{%- else %}
          go-version-file: 'go.mod'
{%- endif %}

      - name: Run benchmarks
        run: go test -bench=. -benchmem -run=^$ ./... > bench.txt
{% raw %}
      - uses: actions/upload-artifact@v4
        if: always()
        with:
          name: benchmark-results
          path: bench.txt
          if-no-files-found: ignore
{%- endraw %}
